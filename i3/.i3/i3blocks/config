# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Volume controls
bindsym XF86AudioRaiseVolume exec amixer -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume  exec amixer -q sset Master 5%- unmute
bindsym XF86AudioMute exec amixer -q sset Master toggle

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# launch rofi
bindsym F1 exec rofi -show run

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+r exec dmenu_run -fn 'Terminus-12' -nb '#021215' -nf '#657b83' -sb '#002b36' -sf '#93a1a1'
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
